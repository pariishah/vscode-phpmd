{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.1.0",
    "configurations": [
        {
			"name": "Launch Language Provider",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceRoot}"
			],
			"stopOnEntry": false,
			"sourceMaps": true,
			"outFiles": [
				"${workspaceRoot}/out/client/**/*.js"
			]
		},
		{
			"name": "Attach Language Provider Server",
			"type": "node",
			"request": "attach",
			"protocol": "inspector",
			"sourceMaps": true,
			"outFiles": [
				"${workspaceRoot}/out/server/**/*.js"
			]
		},
		{
            "type": "node",
            "request": "launch",
            "name": "Launch unit tests",
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script", "test"
			],
			"stopOnEntry": true,
			"sourceMaps": true,
			"port": 9228
        }
	],
	"compounds": [
		{
			"name": "Launch Language Provider & Attach to Server",
			"configurations": [
				"Launch Language Provider",
				"Attach Language Provider Server"
			]
		}
	]
}